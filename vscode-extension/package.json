{
  "name": "archctl-vscode",
  "displayName": "Archctl - Architecture Linter",
  "description": "Enforce clean architecture patterns and dependency rules in your codebase with real-time feedback",
  "version": "0.1.0",
  "publisher": "qiuethan",
  "icon": "icon.png",
  "preview": true,
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "architecture",
    "clean architecture",
    "dependency",
    "linter",
    "layered architecture",
    "hexagonal",
    "ddd",
    "domain driven design",
    "code quality"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qiuethan/archctl"
  },
  "bugs": {
    "url": "https://github.com/qiuethan/archctl/issues"
  },
  "homepage": "https://github.com/qiuethan/archctl#readme",
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.archctl/archctl.config.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "archctl.runCheck",
        "title": "Archctl: Run Architecture Check",
        "icon": "$(layers)"
      },
      {
        "command": "archctl.clearDiagnostics",
        "title": "Archctl: Clear Diagnostics",
        "icon": "$(clear-all)"
      }
    ],
    "configuration": {
      "title": "Archctl",
      "properties": {
        "archctl.autoRunOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run architecture checks when files are saved"
        },
        "archctl.debounceDelay": {
          "type": "number",
          "default": 1000,
          "description": "Delay in milliseconds before running checks after file changes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
