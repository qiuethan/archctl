{
  "name": "archctl",
  "version": "0.1.0",
  "description": "A CLI tool to define, enforce, and propagate architecture rules for your codebase",
  "type": "commonjs",
  "main": "dist/cli.js",
  "bin": {
    "archctl": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run lint && npm run format:check && npm run test && npm run typecheck && tsc",
    "build:fast": "tsc",
    "dev": "ts-node src/cli.ts",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "architecture",
    "cli",
    "linting",
    "rules",
    "documentation",
    "code-quality",
    "typescript"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/archctl.git"
  },
  "homepage": "https://github.com/yourusername/archctl#readme",
  "bugs": {
    "url": "https://github.com/yourusername/archctl/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.1",
    "globby": "^16.0.0",
    "minimatch": "^10.0.1"
  }
}
